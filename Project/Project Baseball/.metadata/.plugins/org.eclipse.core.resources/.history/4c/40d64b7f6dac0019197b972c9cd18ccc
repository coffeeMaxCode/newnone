@SuppressWarnings("serial")
public class MentorSearchBox extends JPanel{
	MainPage page = null;

	//버튼 초기화
	JButton jtb_search = new JButton("Search"); 
	//텍스트필드 초기화
	JTextField jtf_search = new JTextField(10); 
